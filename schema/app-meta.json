{
  "type": "object",
  "title": "Metadata Form example",
  "description": "Settings of the metadata form extension.",
  "jupyter.lab.metadataforms": [
    {
      "id": "jupyter-specta:app-meta",
      "label": "Specta App Config",
      "metadataSchema": {
        "type": "object",
        "properties": {
          "/specta/topbarTitle": {
            "title": "Top Bar Title",
            "type": "string",
            "default": ""
          },
          "/specta/topbarThemeToggle": {
            "title": "Top Bar Theme Toggle",
            "type": "string",
            "enum": ["Yes", "No"],
            "default": "Yes"
          },
          "/specta/defaultLayout": {
            "title": "Page layout",
            "type": "string",
            "enum": ["default", "article", "slides"],
            "default": "default"
          },
          "/specta/hideTopbar": {
            "title": "Hide topbar",
            "type": "string",
            "enum": ["Yes", "No", null],
            "default": null
          },
          "/specta/slidesTheme": {
            "title": "Slides layout theme",
            "type": "string",
            "enum": [
              null,
              "beige",
              "black",
              "blood",
              "dracula",
              "league",
              "moon",
              "night",
              "serif",
              "simple",
              "sky",
              "solarized",
              "white"
            ],
            "default": null
          }
        }
      },
      "metadataOptions": {
        "/specta/hideTopbar": {
          "metadataLevel": "notebook",
          "writeDefault": false
        },
        "/specta/defaultLayout": {
          "metadataLevel": "notebook",
          "writeDefault": false
        },
        "/specta/slidesTheme": {
          "metadataLevel": "notebook",
          "writeDefault": false
        },
        "/specta/topbarTitle": {
          "metadataLevel": "notebook",
          "writeDefault": false
        },
        "/specta/topbarThemeToggle": {
          "metadataLevel": "notebook",
          "writeDefault": false
        }
      }
    }
  ],
  "additionalProperties": false
}
